<?xml version="1.0" encoding="utf-8" ?>
<project name="poc" default="build" basedir=".">
	<property file="build.properties" />
  
	<path id="project.class.path">
    <pathelement location="war/WEB-INF/classes"/>
    <pathelement location="${gwt.sdk}/gwt-user.jar"/>
    <fileset dir="${gwt.sdk}" includes="gwt-dev*.jar"/>
    <!-- Add any additional non-server libs (such as JUnit) -->
    <fileset dir="war/WEB-INF/lib" includes="**/*.jar"/>
  </path>

  <target name="libs" description="Copy libs to WEB-INF/lib">
    <mkdir dir="war/WEB-INF/lib" />
    <copy todir="war/WEB-INF/lib" file="${gwt.sdk}/gwt-servlet.jar" />
    <!-- Add any additional server libs that need to be copied -->
  </target>

  <target name="static" description="Copy static classpath resources to WEB-INF/classes">
    <mkdir dir="war/WEB-INF/classes" />
    <copy todir="war/WEB-INF/classes" preservelastmodified="true">
    	<fileset dir="docs" includes="**/*" />
    </copy>
  </target>

  <target name="javac" depends="libs, static" description="Compile java source">
    <mkdir dir="war/WEB-INF/classes"/>
    <javac srcdir="src" includes="**" encoding="utf-8"
        destdir="war/WEB-INF/classes"
        source="1.5" target="1.5" nowarn="true"
        debug="true" debuglevel="lines,vars,source">
      <classpath refid="project.class.path"/>
    </javac>
    <copy todir="war/WEB-INF/classes">
      <fileset dir="src" excludes="**/*.java"/>
    </copy>
  </target>

  <target name="gwtc" depends="javac" description="GWT compile to JavaScript">
    <java failonerror="true" fork="true" classname="com.google.gwt.dev.Compiler">
      <classpath>
        <pathelement location="src"/>
        <path refid="project.class.path"/>
      </classpath>
			<jvmarg value="-Xms128m" />
			<jvmarg value="-Xmx768m" />
			<jvmarg value="-Xss1024k" />
			<arg value="-style" />
    	<arg value="${gwt.compile.style}" />
			<arg value="-logLevel" />
			<arg value="${gwt.log.level}" />
      <arg value="com.tll.tabulaw.Poc"/>
    </java>
  </target>

  <target name="devmode" depends="javac" description="Run development mode">
    <java failonerror="true" fork="true" classname="com.google.gwt.dev.DevMode">
      <classpath>
        <pathelement location="src"/>
        <path refid="project.class.path"/>
      </classpath>
			<jvmarg value="-Xms128m" />
			<jvmarg value="-Xmx768m" />
			<jvmarg value="-Xss1024k" />
    	<arg value="-ea" />
      <arg value="-startupUrl"/>
      <arg value="Poc.html"/>
			<arg value="-style" />
    	<arg value="${gwt.compile.style}" />
			<arg value="${gwt.log.level}" />
      <arg value="com.tll.tabulaw.Poc"/>
    </java>
  </target>
	
	<fileset id="tll-deps" dir="${maven.repo.dir}">
		<include name="com/tll/tll-core/${tll.deps.version}/tll-core-${tll.deps.version}.jar" />
		<include name="com/tll/tll-schema/${tll.deps.version}/tll-schema-${tll.deps.version}.jar" />
		<include name="com/tll/tll-dao-api/${tll.deps.version}/tll-dao-api-${tll.deps.version}.jar" />
		<include name="com/tll/tll-client-core/${tll.deps.version}/tll-client-core-${tll.deps.version}.jar" />
		<include name="com/tll/tll-client-ui/${tll.deps.version}/tll-client-ui-${tll.deps.version}.jar" />
		<include name="com/tll/tll-client-view/${tll.deps.version}/tll-client-view-${tll.deps.version}.jar" />
		<include name="com/tll/tll-client-model/${tll.deps.version}/tll-client-model-${tll.deps.version}.jar" />
		<include name="com/tll/tll-client-listing/${tll.deps.version}/tll-client-listing-${tll.deps.version}.jar" />
		<include name="com/tll/tll-client-field/${tll.deps.version}/tll-client-field-${tll.deps.version}.jar" />
	</fileset>
	
	<target name="updateTllDeps" description="Updates all tll dependencies">
		<copy todir="war/WEB-INF/lib" preservelastmodified="true" flatten="true">
			<fileset refid="tll-deps" />
		</copy>
	</target>

