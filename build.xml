  <target name="build" depends="gwtc" description="Build this project" />

  <target name="war" depends="build" description="Create a war file">
    <zip destfile="poc.war" basedir="war"/>
  </target>

  <target name="warnobuild" description="Create a war file">
    <zip destfile="poc.war" basedir="war"/>
  </target>

  <target name="deploy" depends="war" description="Deploy the war file OVERWRITING any existing deployment.">
    <delete dir="${war.deploy.dir}/poc" failonerror="false" />
  	<copy todir="${war.deploy.dir}" file="poc.war" />
  </target>

  <target name="deploynobuild" depends="warnobuild" description="Deploy the war file w/o gwtc OVERWRITING any existing deployment.">
    <delete dir="${war.deploy.dir}/poc" failonerror="false" />
    <copy todir="${war.deploy.dir}" file="poc.war" />
  </target>

  <target name="clean" description="Cleans this project">
    <delete dir="war/WEB-INF/classes" failonerror="false" />
    <delete dir="war/poc" failonerror="false" />
  </target>

</project>
