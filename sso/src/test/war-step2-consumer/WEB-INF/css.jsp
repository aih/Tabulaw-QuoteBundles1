<%@ page contentType="text/css"%>
body {
  font-family: sans-serif;
  background: #ffffff;
}

#main {
  margin: 2% 2%;
  padding: 5px;
  background: #ffffff
}

div {
  padding: 5px;
}

#loginform {
  width: 300px;
  background-color: #bcd;
  border: 2px solid #9ab;
}

#preamble {
  text-align: center;
}

#buttons {
  margin-left: 90px;
}

#loginform label {
  padding-top: 4px;
  width: 90px;
  float: left;
  display: block;
}

#submit {
  margin-left: 90px;
  display: block;
}

#submit-button {
  float: left;
}

#spinner {
  float: right;
  margin-right: 15px;
  position: relative;
  top: 3px;
}